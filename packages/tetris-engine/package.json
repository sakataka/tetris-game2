{
  "name": "@tetris-game/engine",
  "version": "1.0.0",
  "description": "Pure TypeScript Tetris Game Engine with BitBoard implementation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun run transpile",
    "transpile": "node esbuild.config.mjs",
    "types": "tsc src/index.ts --declaration --emitDeclarationOnly --outDir dist --moduleResolution bundler --module esnext --target es2022 --skipLibCheck",
    "dev": "node esbuild.config.mjs --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:performance": "vitest run tests/performance",
    "test:golden-master": "vitest run tests/golden-master",
    "lint": "biome check src tests --write",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "tetris",
    "game-engine",
    "bitboard",
    "typescript",
    "event-driven"
  ],
  "author": "sakataka",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.7",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.6",
    "npm-run-all2": "^8.0.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {},
  "dependencies": {},
  "files": [
    "dist"
  ],
  "sideEffects": false
}
