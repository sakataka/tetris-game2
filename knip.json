{
  "entry": ["src/main.tsx", "**/*.test.{ts,tsx}"],
  "project": ["src/**/*.{ts,tsx}", "*.{ts,js}"],
  "ignore": [
    "dist/**",
    "node_modules/**",
    "**/*.benchmark.{ts,tsx}",
    "src/test/__mocks__/**",
    "src/test/setup.ts",
    "src/test/generators/**"
  ],
  "ignoreExportsUsedInFile": true,
  "includeEntryExports": false,
  "ignoreBinaries": ["test"],
  "ignoreDependencies": ["@biomejs/biome", "bun-types", "happy-dom", "@testing-library/jest-dom"]
}
