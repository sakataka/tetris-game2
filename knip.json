{
  "entry": [
    "src/main.tsx",
    "src/game/ai/index.ts",
    "**/*.test.{ts,tsx}",
    "src/features/*/index.ts",
    "src/app/providers/EffectsProvider.tsx"
  ],
  "project": ["src/**/*.{ts,tsx}", "*.{ts,js}"],
  "ignore": [
    "dist/**",
    "node_modules/**",
    "**/*.benchmark.{ts,tsx}",
    "**/*.bench.{ts,tsx}",
    "src/test/__mocks__/**",
    "src/test/setup.ts",
    "src/test/generators/**",
    "src/design-tokens/**",
    "src/features/*/ui/**",
    "src/features/*/api/**",
    "src/features/*/lib/**"
  ],
  "ignoreExportsUsedInFile": true,
  "includeEntryExports": false,
  "ignoreDependencies": ["@biomejs/biome", "bun-types", "@axe-core/react"]
}
