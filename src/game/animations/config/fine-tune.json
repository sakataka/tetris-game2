{
  "$schema": "./schema/fine-tune.schema.json",
  "version": "prototype-1.0",
  "metadata": {
    "lastModified": "2025-07-13",
    "description": "ðŸš¨ AI-PROHIBITED: Human UX judgment required - Animation timing and easing parameters that require human sensory evaluation",
    "aiProhibited": true
  },
  "uiTimings": {
    "buttonHover": {
      "duration": 120,
      "easing": "ease-out",
      "cancellable": true
    },
    "scoreCount": {
      "duration": 800,
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
      "cancellable": false
    },
    "piecePlace": {
      "duration": 150,
      "easing": "ease-in-out",
      "cancellable": true
    },
    "lineClear": {
      "duration": 450,
      "easing": "cubic-bezier(0.23, 1, 0.32, 1)",
      "cancellable": false
    },
    "gameOver": {
      "duration": 1200,
      "easing": "ease-out",
      "cancellable": false
    },
    "modalFadeIn": {
      "duration": 200,
      "easing": "ease-out",
      "cancellable": true
    },
    "modalFadeOut": {
      "duration": 150,
      "easing": "ease-in",
      "cancellable": true
    }
  },
  "performanceBudgets": {
    "mainThreadBlocking": 4,
    "layoutThrashing": 1,
    "maxAnimations": 8,
    "frameDropThreshold": 2
  },
  "gameplayFeelParams": {
    "pieceDropEasing": "cubic-bezier(0.25, 0.46, 0.45, 0.94)",
    "lockDelayFeedback": {
      "duration": 80,
      "intensity": 0.7
    },
    "softDropAcceleration": 1.5,
    "hardDropImpact": {
      "duration": 100,
      "dampening": 0.8
    }
  },
  "accessibilityOverrides": {
    "reduceMotion": {
      "durationMultiplier": 0.5,
      "disableEasing": false
    },
    "highContrast": {
      "emphasisMultiplier": 1.2
    }
  }
}
