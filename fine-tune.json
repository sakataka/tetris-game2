{
  "schemaVersion": "1.0",
  "metadata": {
    "description": "UI Performance and Animation Configuration",
    "created": "2025-07-13",
    "lastModified": "2025-07-13",
    "version": "1.0.0"
  },
  "uiTimings": {
    "description": "Ultra-responsive UI timing configurations for micro-interactions",
    "buttonHover": {
      "duration": 120,
      "delay": 0,
      "easing": "ease-out",
      "targetResponseTime": 60
    },
    "buttonPress": {
      "duration": 100,
      "delay": 0,
      "easing": "ease-in-out",
      "targetResponseTime": 30
    },
    "commonTimings": {
      "quick": 120,
      "normal": 300,
      "slow": 600
    }
  },
  "performance": {
    "description": "Performance monitoring and optimization settings",
    "targets": {
      "hoverResponse": 60,
      "clickResponse": 30,
      "animationDuration": 120,
      "fpsMinimum": 55,
      "memoryLeakThreshold": 0
    },
    "optimization": {
      "useGPUAcceleration": true,
      "enableWillChange": true,
      "prefersReducedMotion": "respect"
    }
  },
  "browserCompatibility": {
    "description": "Cross-browser compatibility settings",
    "supportTarget": "95%",
    "fallbacks": {
      "transform": "scale",
      "transition": "transform ease-out",
      "willChange": "transform"
    }
  },
  "hapticFeedback": {
    "description": "Mobile haptic feedback settings",
    "patterns": {
      "light": 10,
      "medium": 25,
      "heavy": 50
    },
    "enabledByDefault": true
  }
}
